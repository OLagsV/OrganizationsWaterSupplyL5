@model OrganizationsWaterSupplyL4.Models.RateOrgNote

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Тариф организации</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RateOrgNoteId" />
            <div class="form-group">
                <label asp-for="RateId" class="control-label"></label>
                <select asp-for="RateId" class="form-control" asp-items="ViewBag.RateId"></select>
                <span asp-validation-for="RateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId"></select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
